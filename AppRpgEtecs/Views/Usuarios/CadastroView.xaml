             x:Class="AppRpgEtecs.Views.Usuarios.CadastroView"
             Title="CadastroView">
    <VerticalStackLayout>
        <Label Text="Marquitos" />
        <Entry Placeholder="Digite seu nome de usuÃ¡rio" Text ="{Binding Login}"
            Margin="0,10,0,0" VerticalOptions="FillAndExpand"
